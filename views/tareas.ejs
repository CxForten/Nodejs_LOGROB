<div class="card card-primary">
    <div class="card-header col-md-12">
        <h3 class="card-title">Añadir Tarea</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <div class="card-body">
        <form method="POST" action="tareasfinal">
  
    <div class="form-group">
      <label for="exampleInputEmail1">Tarea</label>
      <input type="text" name="nombre" class="form-control" id="exampleInputEmail1" required placeholder="Ingrese una tarea">
    </div>
<div class="form-group">
    <label for="exampleInputEmail3">Horas de tarea</label>
    <input type="number" name="horas" class="form-control" id="exampleInputEmail3"  title="Ingrese un número decimal válido" placeholder="ejem: 1, 10, 12, 17..." min="0">
</div>

      <label for="inputStatus">Empleado</label>
        <select name="id_empleado" id="inputStatus" class="form-control custom-select">
            <%resultados.forEach((empleados)=>{%>
                <option value="<%=empleados.id%>"><%=empleados.nombre%></option>
    <%})%>
    </select> <br>
  <div class="">
      <br><button type="submit" class="btn btn-block bg-gradient-primary">Añadir</button>
    </div>
</form>
</div>
</div>